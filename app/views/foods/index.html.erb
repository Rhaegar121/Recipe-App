<%= render 'shared/header' %>
<h2> My Foods </h2>

<table>
    <thead>
        <tr>
            <th>Food</th>
            <th>Measurement Unit</th>
            <th>Unit price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @foods.each do |food| %>
            <tr>
                <td><%= food.name %></td>
                <td><%= food.measurement_unit %></td>
                <td><%= food.price %></td>
                <td>
                    <%= button_to 'Delete', food_path(food.id), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' }, class: 'btn-link warning large' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Add food", new_food_path, class: 'btn-link' %>
