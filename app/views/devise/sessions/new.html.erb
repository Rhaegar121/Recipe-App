<div class="login">
  <%= render 'shared/flash' %>
  <div class="login-container">
    <div class="logo"><%= image_tag('loginlogo.png', alt: 'Logo', class: 'logo-img' ) %></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field field-icon">
        <span><%= image_tag('user.png', alt: 'user', class: 'icon' ) %></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email or username" %>
      </div>

      <div class="field field-icon">
        <span><%= image_tag('lock.png', alt: 'user', class: 'icon' ) %></span>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Login" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
