<%= render 'shared/header', back: false %>
<%= render 'shared/flash' %>

<div class="fullHeight">
  <h2>My Recipes</h2>

  <% if @recipes.length === 0 %>
    <p class="no-recipes">You don't have any recipes yet.</p>
  <% else %>
    <ul class="recipes">
      <%= render partial: 'recipe', collection: @recipes, locals: {recipe: @recipe}  %>
    </ul>
  <% end %>

  <div class="recipe-btn">
    <%= link_to t('.new'), new_recipe_path, class: 'btn-link' %>
  </div>
</div>