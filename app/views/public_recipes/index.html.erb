<%= render 'shared/header', back: false %>
<%= render 'shared/flash' %>

<% if @recipes.empty? %>
    <h2>No Public Recipes found</h2>
<% else %>
    <h2>Public Recipes</h2>
    <ul class="recipes">
        <% @recipes.each do |recipe| %>
            <li>
                <%= link_to recipe_path(recipe) do %>
                    <div class="img">
                        <%= image_tag recipe.image %>
                    </div>
                    <p class="title"><%= recipe.name %></p>
                    <div class="info">
                        <p class="info-time"> 
                            <span>Total Time:</span>
                            <span>
                            <%= image_tag('watch.svg', alt: 'stop watch', class: 'watch' ) %>
                            <%= recipe.total_time %>
                            min
                            </span>
                        </p>
                        <p class="info-time">
                            <span>Total Price:</span>
                            <span class="move-down">$ <%= recipe.total_price %></span>
                        </p>
                    </div>
                    <p class="username">By: <span><%= recipe.user.name %></span></p>
                <% end %>
            </li>
        <% end %>
    </ul>
<% end %>
            
