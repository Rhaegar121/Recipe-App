<%= render 'shared/header', back: false %>
<%= render 'shared/flash' %>

<% if @recipes.empty? %>
    <h2>No Public Recipes found</h2>
<% else %>
    <h2>Public Recipes</h2>
    <ul class="recipes">
        <% @recipes.each do |recipe| %>
            <li>
                <div>
                    <%= link_to recipe.name, recipe_path(recipe.id) %>
                    <p>By: <span><%= recipe.user.name %></span></p>
                </div>
                <div>
                    <p>Total food items: <%= recipe.total_food_items %></p>
                    <p>Total price: <%= recipe.total_price %></p>
                </div>
            </li>
        <% end %>
    </ul>
<% end %>
            
